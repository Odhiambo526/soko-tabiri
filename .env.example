# Soko Tabiri Environment Configuration
# Copy to .env and fill in values. NEVER commit .env to git.

# =============================================================================
# GENERAL
# =============================================================================
NODE_ENV=development

# =============================================================================
# DATABASE (Postgres)
# =============================================================================
POSTGRES_USER=soko
POSTGRES_PASSWORD=soko_dev_password
POSTGRES_DB=soko_tabiri

# =============================================================================
# REDIS
# =============================================================================
# No additional config needed for local dev

# =============================================================================
# SERVICE-TO-SERVICE AUTHENTICATION
# =============================================================================
# HMAC secret for internal service calls. Generate with: openssl rand -hex 32
INTERNAL_HMAC_SECRET=dev_hmac_secret_change_in_production

# =============================================================================
# ZCASH / LIGHTWALLETD
# =============================================================================
# Public testnet lightwalletd endpoint
LIGHTWALLETD_URL=lightwalletd.testnet.electriccoin.co:9067
ZCASH_NETWORK=testnet

# For local development, use mock mode
MOCK_LIGHTWALLETD=true

# =============================================================================
# KEY MANAGEMENT (KMS/HSM)
# =============================================================================
# CRITICAL: Never store raw private keys. Use KMS/HSM references only.
# Supported providers: aws-kms, gcp-kms, azure-keyvault, hashicorp-vault, mock
KMS_PROVIDER=mock
KMS_KEY_ID=

# AWS KMS (if KMS_PROVIDER=aws-kms)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# GCP KMS (if KMS_PROVIDER=gcp-kms)
# GCP_PROJECT_ID=
# GCP_LOCATION=
# GCP_KEYRING=
# GCP_KEY_NAME=

# HashiCorp Vault (if KMS_PROVIDER=hashicorp-vault)
# VAULT_ADDR=
# VAULT_TOKEN=

# =============================================================================
# PRIVACY CONTROLS
# =============================================================================
# Default: shielded-only transactions (z-to-z)
ALLOW_DESHIELD=false
# If ALLOW_DESHIELD=true, require KYC verification
DESHIELD_KYC=false

# =============================================================================
# ORACLE CONFIGURATION
# =============================================================================
# Dispute window in hours (default 24h)
DISPUTE_WINDOW_HOURS=24
# Minimum stake in zatoshi (default 1 ZEC = 100000000)
MIN_STAKE_ZAT=100000000

# =============================================================================
# CORS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# MONITORING (Optional)
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
